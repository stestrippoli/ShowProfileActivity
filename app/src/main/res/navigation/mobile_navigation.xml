<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/serviceFragment">

    <fragment
        android:id="@+id/nav_timeSlotDetailsFragment"
        android:name="com.example.showprofileactivity.timeslots.TimeSlotDetailsFragment"
        android:label="Time Slot Details"
        tools:layout="@layout/fragment_time_slot_details">
        <action
            android:id="@+id/action_toEdit"
            app:destination="@id/timeSlotEditFragment2"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/timeSlotEditFragment2"
        android:name="com.example.showprofileactivity.timeslots.TimeSlotEditFragment"
        android:label="Edit item" >
        <action
            android:id="@+id/action_editItem_to_home"
            app:destination="@id/itemFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.showprofileactivity.timeslots.TimeSlotFragment"
        android:label="Fragment list"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/action_itemFragment_to_nav_timeSlotDetailsFragment"
            app:destination="@id/nav_timeSlotDetailsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_addnewfragment"
            app:destination="@id/timeSlotEditFragment2" />
        <action
            android:id="@+id/action_toEditFragment"
            app:destination="@id/timeSlotEditFragment2"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/showProfileFragment"
        android:name="com.example.showprofileactivity.profile.ShowProfileFragment"
        android:label="Your Profile"
        tools:layout="@layout/fragment_show_profile" >
        <action
            android:id="@+id/action_toEditProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.showprofileactivity.profile.EditProfileFragment"
        android:label="Edit Profile" />
    <fragment
        android:id="@+id/serviceFragment"
        android:name="com.example.showprofileactivity.services.ServiceFragment"
        android:label="Home - Services"
        tools:layout="@layout/fragment_service_list" >
        <action
            android:id="@+id/action_serviceFragment_to_offersFragment"
            app:destination="@id/offersFragment" />
    </fragment>
    <fragment
        android:id="@+id/offerDetailFragment"
        android:name="com.example.showprofileactivity.offers.OfferDetailFragment"
        android:label="Offer Details"
        tools:layout="@layout/fragment_offer_detail" >
        <action
            android:id="@+id/action_showprofileoffer"
            app:destination="@id/showProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/offersFragment"
        android:name="com.example.showprofileactivity.offers.OffersFragment"
        android:label="Offers"
        tools:layout="@layout/fragment_offers_list">
        <action
            android:id="@+id/action_toOfferDetailFragment"
            app:destination="@id/offerDetailFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
</navigation>