<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/itemFragment">

    <fragment
        android:id="@+id/nav_timeSlotDetailsFragment"
        android:name="com.example.showprofileactivity.TimeSlotDetailsFragment"
        android:label="Time Slot Details"
        tools:layout="@layout/fragment_time_slot_details" >
        <action
            android:id="@+id/action_toEdit"
            app:destination="@id/timeSlotEditFragment2" />
    </fragment>
    <fragment
        android:id="@+id/timeSlotEditFragment2"
        android:name="com.example.showprofileactivity.TimeSlotEditFragment"
        android:label="TimeSlotEditFragment" />
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.showprofileactivity.TimeSlotFragment"
        android:label="fragment_item_list"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/action_itemFragment_to_nav_timeSlotDetailsFragment"
            app:destination="@id/nav_timeSlotDetailsFragment" />
        <action
            android:id="@+id/action_addnewfragment"
            app:destination="@id/timeSlotEditFragment2" />
        <action
            android:id="@+id/action_toEditFragment"
            app:destination="@id/timeSlotEditFragment2"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_itemFragment_to_showProfileFragment"
            app:destination="@id/showProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/showProfileFragment"
        android:name="com.example.showprofileactivity.ShowProfileFragment"
        android:label="fragment_show_profile2"
        tools:layout="@layout/fragment_show_profile2" >
        <action
            android:id="@+id/action_toEditProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.showprofileactivity.EditProfileFragment"
        android:label="EditProfileFragment" />
</navigation>